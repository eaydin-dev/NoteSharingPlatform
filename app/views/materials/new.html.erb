<div class="panel panel-success" style="margin-top:40px;">

  <div class="panel-heading">
    <h3>New Material</h3>
  </div>

  <div class="panel-body">
    <%= form_for @material, html: { multipart:true } do |f| %>

      <div class="form-group">
        <%= f.label :title %><br />
        <%= f.text_field :title, autofocus: true %>
      </div>

      <div class="form-group">
        <%= f.label :description %><br />
        <%= f.text_area :description, autofocus: true %>
      </div>

      <div class="form-group">
        <%= f.label :price %><br />
        <%= f.text_field :price, autofocus: true %>
      </div>

      <div class="form-group">
        <%= f.label :data %><br />
        <div class="col-xs-offset-5"><%= f.file_field :data, autofocus: true %></div>
      </div>

      <div class="actions">
        <%= f.submit :value => "Create", :class => "btn btn-info" %>
      </div>
    <% end %>
  </div>

  <div class="panel-footer">

  </div>

</div>