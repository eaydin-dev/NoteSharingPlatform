<div class="page-header"><h2>Edit <%= @material.title %></h2></div>

<%= form_for(@material, url: edit_material_path(@material), html: { method: :put }) do |f| %>

  <div class="form-group">
    <%= f.label :title %><br />
    <%= f.text_field :title, autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.label :description %><br />
    <%= f.text_area :description, autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.label :price %><br />
    <%= f.text_field :price, autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.label :data %><br />
    <div class="col-xs-offset-5"><%= f.file_field :data, autofocus: true %></div>
  </div>

  <div class="actions">
    <%= f.submit :value => "Update", :class => "btn btn-info" %>
  </div>
<% end %>

</div>