<div class="container" style="margin-top:70px;">

	<div class="panel panel-primary">

		<div class="panel-heading">
			<h3><%= @material.title %></h3>
		</div>

		<div class="panel-body">

			<div class="col-xs-3 text-left">
				<div class="page-header">
					<h3>Owner Info</h3>
				</div>
				<strong>Name:</strong> <%= current_user.name %> <%= current_user.surname %>
				<br>
				<strong>School:</strong> <%= current_user.school %>
				<br>  
				<strong>Department:</strong> <%= current_user.department %>
				<br>
				<strong>Price:</strong> <%= @material.price %>
			</div>

			<div class=" col-xs-9 text-left">
				<div class="page-header">
					<h3>Description</h3>
				</div>
				<%= @material.description %>
			</div>

			<div class="row">
				
			</div>

		</div>

		<div class="panel-footer">
			<button type="button" class="btn btn-link btn-lg">
				<%= link_to "Download", @material.data.url %>
			</button>
			
		</div>

	</div>
	

</div>